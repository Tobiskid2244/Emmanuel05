d1: DISTANCE ATOMS1=3,5 ATOMS2=1,2 COMPONENTS
d1_mean: MEAN ARG=d1.x PERIODIC=NO
d1lt: LESS_THAN ARG=d1.x SWITCH={RATIONAL R_0=6.0}
d1_lessthan: SUM ARG=d1lt PERIODIC=NO
d1m: MORE_THAN ARG=d1.x SWITCH={RATIONAL R_0=5.0}
d1_morethan: SUM ARG=d1m PERIODIC=NO
d1m1: CUSTOM ARG=d1.x FUNC=exp(0.1/x) PERIODIC=NO
d1m2: SUM ARG=d1m1 PERIODIC=NO
d1_min: CUSTOM ARG=d1m2 FUNC=0.1/log(x) PERIODIC=NO
PRINT ARG=d1_min,d1_lessthan,d1_mean,d1_morethan FILE=colvar FMT=%8.4f
b: BIASVALUE ARG=d1_min
