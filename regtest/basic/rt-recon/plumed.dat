d1: POSITION ATOM=1
rr: ATLAS ARG=d1.x,d1.y REFERENCE=cluster PACE=10 SIGMA=2.0 BIASFACTOR=5 HEIGHT=1.25 GRID_MAX=20 GRID_BIN=100 TEMP=300
PRINT ARG=d1.x,d1.y,rr_dist-1,rr_dist-2,rr_dist-3,rr_wkernel-1,rr_wkernel-2,rr_wkernel-3,rr FMT=%8.4f FILE=colvar

# Reweight using recon bias, collect frames and output weights
rw: REWEIGHT_BIAS ARG=rr TEMP=120.279047  # This is the inverse of boltzmann's constant in kJ mol-1
cc: COLLECT_FRAMES ARG=d1.x,d1.y LOGWEIGHTS=rw STRIDE=10 
# This now does the ITRE business to get a single weight for each frame
it: ITRE ARG=cc.logweights TEMP=300 
PRINT ARG=cc.logweights FILE=logweights.matx FMT=%8.4f
PRINT ARG=it FILE=finalweights FMT=%8.4f
